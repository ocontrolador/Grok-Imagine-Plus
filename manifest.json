{
   "manifest_version": 3,
   "name": "Grok Imagine Plus",
   "version": "1.2.5",
   "description": "Save, organize, and reuse custom prompts with video controls and zoom.",
   "permissions": [
      "storage"
   ],
   "content_scripts": [ {
      "css": [ "style.css" ],
      "js": [ "content.js" ],
      "matches": [ "https://grok.com/*" ]
   } ],
   "icons": {
      "128": "icons/icon128.png",
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
   }
}